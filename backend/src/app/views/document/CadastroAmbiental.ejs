        <% emissions.forEach(function(emission) { %>
          <tr>
            <td>
              <%= emission.source %>
            </td>
            <td>
              <%= emission.pollutant %>
            </td>
            <td style="text-align: center;">
              <%= emission.concentration %> <%= emission.unit %>
            </td>
            <td>
              <%= emission.control_system %>
            </td>
          </tr>
        <% }); %>
      </table>
